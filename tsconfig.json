{
    "extends": "./src/tsconfig/nodenext/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext",
        "types": ["jest", "node", "rollup-plugin-peer-deps-external"],
        "typeRoots": ["./node_modules/@types"],
        "useDefineForClassFields": false,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./.tmp/.types",
        "jsx": "react",
        "skipLibCheck": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "./dist/@types", "./src/install/appConfig/jest.config.mjs"]
}
