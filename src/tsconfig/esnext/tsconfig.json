{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "incremental": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ESNext",
        "types": ["node"],
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "../../../node_modules/@types",
            "../../../node_modules/@arpadroid/module/node_modules/@types"
        ],
        "paths": {
            "rollup-plugin-copy": ["./node_modules/@arpadroid/module/node_modules/rollup-plugin-copy"],
            "@storybook/web-components-vite": [
                "./node_modules/@arpadroid/module/node_modules/@storybook/web-components-vite/dist/index.d.ts"
            ],
            "@storybook/web-components": [
                "./node_modules/@arpadroid/module/node_modules/@storybook/web-components/dist/index.d.ts"
            ],
            "@storybook/addon-vitest": [
                "./node_modules/@arpadroid/module/node_modules/@storybook/addon-vitest/dist/index.d.ts"
            ],
            "@storybook/builder-vite": [
                "./node_modules/@arpadroid/module/node_modules/@storybook/builder-vite/dist/index.d.ts"
            ],
            "storybook/test": [
                "./node_modules/@arpadroid/module/node_modules/storybook/dist/test/index.d.ts"
            ],
            "storybook/actions": [
                "./node_modules/@arpadroid/module/node_modules/storybook/dist/actions/index.d.ts"
            ]
        }
        /**
         * @warning: props rootDir and outdir must be overriden in the project's tsconfig.json in order to take effect.
            "rootDir": "./src",
            "outDir": "./.tmp/.types"
         */
        // "tsBuildInfoFile": "./.tsbuildinfo",
    },
    "include": ["src/index.js", "src/**/*", "src/mockData/**/*.json"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
