{
    "compilerOptions": {
        "useDefineForClassFields": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ESNext",
        "types": ["react", "node"],
        "typeRoots": [
            "../../../node_modules/@types",
            "../../../node_modules/@arpadroid/module/node_modules/@types"
        ],
        "jsx": "react",
        // Strict Mode Settings
        "strict": true,
        /**
         * @warning: props rootDir and outdir must be overriden in the project's tsconfig.json in order to take effect.
            "rootDir": "./src",
            "outDir": "./.tmp/.types"
         */
        "incremental": true,
        // "tsBuildInfoFile": "./.tsbuildinfo",
        "composite": true,
        "skipLibCheck": true
    },
    "include": ["src/index.js", "src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
