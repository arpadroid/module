{
    "extends": "../../src/tsconfig/esnext/tsconfig.json",
    "compilerOptions": {
        // "tsBuildInfoFile": ".tsbuildinfo"
        "rootDir": "./src",
        "outDir": "./.tmp/.types",
        "skipLibCheck": true,
        "paths": {
            "@storybook/test": [
                "../../node_modules/@storybook/test/dist/index.d.ts"
            ],
            "rollup-plugin-copy": ["../../node_modules/rollup-plugin-copy"],
            "@storybook/web-components": [
                "../../node_modules/@storybook/web-components"
            ]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.stories.js", "**/*.test.js", "./dist/@types"]
}
